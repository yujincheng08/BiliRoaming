<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingStart="25dp"
    android:paddingEnd="20dp"
    android:rowCount="5">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:singleLine="true"
        android:text="中国大陆"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/cn_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4"
        android:autofillHints="no"
        android:hint="cn.biliroaming.example.com"
        android:inputType="textUri"
        android:tag="cn_server"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="香港"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/hk_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4"
        android:autofillHints="no"
        android:hint="hk.biliroaming.example.com"
        android:inputType="textUri"
        android:tag="hk_server"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="台湾"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/tw_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4"
        android:autofillHints="no"
        android:hint="tw.biliroaming.example.com"
        android:inputType="textUri"
        android:tag="tw_server"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="泰国/东南亚"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/th_server"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4"
        android:autofillHints="no"
        android:hint="th.biliroaming.example.com"
        android:inputType="textUri"
        android:tag="th_server"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/quality_verify_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:text="去除本地效验"
        android:visibility="gone"
        tools:ignore="HardcodedText" />

    <Switch
        android:id="@+id/quality_verify_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="4"
        android:visibility="gone" />
</GridLayout>